DT_COMPAT_HPM_UART := hpmicro,hpm-uart

config UART_HPM
	bool "HPMICRO serial driver"
	default $(dt_compat_enabled,$(DT_COMPAT_HPM_UART))
	depends on (SOC_SERIES_HPMICRO)
	depends on (HAS_HPMSDK_UART)
	select SERIAL_HAS_DRIVER
	select SERIAL_SUPPORT_INTERRUPT
	help
	  This option enables the UART driver for HPM SoC family.
